{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "es2015",
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "sourceMap": true,
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
